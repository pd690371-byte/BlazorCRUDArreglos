@page "/facultads/create"
@using Microsoft.EntityFrameworkCore
@using BlazorCRUDArreglos.Modelos
@inject IDbContextFactory<BlazorCRUDArreglos.Modelos.AppDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Crear Facultades</PageTitle>

<h1>Crear Facultad</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Facultad" OnValidSubmit="AddFacultad" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label> 
                <InputText id="nombre" @bind-Value="Facultad.Nombre" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Facultad.Nombre" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Crear</button> |  <a href="/facultads">Volver al Listado</a>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Facultad Facultad { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddFacultad()
    {
        using var context = DbFactory.CreateDbContext();
        context.Facultades.Add(Facultad);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/facultads");
    }
}
