@page "/ocupacions/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorCRUDArreglos.Modelos
@inject IDbContextFactory<BlazorCRUDArreglos.Modelos.AppDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar Ocupaciones</PageTitle>

<h1>Editar Ocupación</h1>

<hr />
@if (Ocupacion is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Ocupacion" OnValidSubmit="UpdateOcupacion" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Ocupacion.Id" value="@Ocupacion.Id" />
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <InputText id="nombre" @bind-Value="Ocupacion.Nombre" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Ocupacion.Nombre" class="text-danger" />
                </div>
                @*<div class="mb-3">
                    <label for="inactivo" class="form-label">Inactivo:</label>
                    <InputCheckbox id="inactivo" @bind-Value="Ocupacion.Inactivo" class="form-check-input" />
                    <ValidationMessage For="() => Ocupacion.Inactivo" class="text-danger" />
                </div>*@
                <button type="submit" class="btn btn-primary">Guardar</button> | <a href="/ocupacions">Volver al Listado</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Ocupacion? Ocupacion { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Ocupacion ??= await context.Ocupacion.FirstOrDefaultAsync(m => m.Id == Id);

        if (Ocupacion is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateOcupacion()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Ocupacion!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!OcupacionExists(Ocupacion!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/ocupacions");
    }

    private bool OcupacionExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Ocupacion.Any(e => e.Id == id);
    }
}
