@page "/departamentos/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorCRUDArreglos.Modelos
@inject IDbContextFactory<BlazorCRUDArreglos.Modelos.AppDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar Departamentos</PageTitle>

<h1>Editar Departamento</h1>

<hr />
@if (Departamento is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Departamento" OnValidSubmit="UpdateDepartamento" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Departamento.Id" value="@Departamento.Id" />
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <InputText id="nombre" @bind-Value="Departamento.Nombre" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Departamento.Nombre" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button> | <a href="/departamentos">Volver al Listado</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Departamento? Departamento { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Departamento ??= await context.Departamentos.FirstOrDefaultAsync(m => m.Id == Id);

        if (Departamento is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateDepartamento()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Departamento!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!DepartamentoExists(Departamento!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/departamentos");
    }

    private bool DepartamentoExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Departamentos.Any(e => e.Id == id);
    }
}
