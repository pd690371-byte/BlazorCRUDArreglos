@page "/nacionalidads/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorCRUDArreglos.Modelos
@inject IDbContextFactory<BlazorCRUDArreglos.Modelos.AppDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Nacionalidades</PageTitle>

<p>Está seguro que desea eliminar esta Nacionalidad?</p>

<div>

    <hr />
    @if (nacionalidad is null)
    {
        <p><em>Cargando...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@nacionalidad.Nombre</dd>
        </dl>
        <EditForm method="post" Model="nacionalidad" OnValidSubmit="DeleteNacionalidad" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(nacionalidad is null)">Eliminar</button> |
            <a href="/nacionalidads">Volver al Listado</a>
        </EditForm>
    }
</div>

@code {
    private Nacionalidad? nacionalidad;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        nacionalidad = await context.Nacionalidad.FirstOrDefaultAsync(m => m.Id == Id);

        if (nacionalidad is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteNacionalidad()
    {
        using var context = DbFactory.CreateDbContext();
        context.Nacionalidad.Remove(nacionalidad!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/nacionalidads");
    }
}
