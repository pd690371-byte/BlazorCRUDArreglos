@page "/nacionalidads/edit"
@using Microsoft.EntityFrameworkCore
@using BlazorCRUDArreglos.Modelos
@inject IDbContextFactory<BlazorCRUDArreglos.Modelos.AppDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar Nacionalidades</PageTitle>

<h1>Editar Nacionalidad</h1>

<hr />
@if (Nacionalidad is null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Nacionalidad" OnValidSubmit="UpdateNacionalidad" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Nacionalidad.Id" value="@Nacionalidad.Id" />
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <InputText id="nombre" @bind-Value="Nacionalidad.Nombre" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Nacionalidad.Nombre" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button> |  <a href="/nacionalidads">Volver al Listado</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Nacionalidad? Nacionalidad { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Nacionalidad ??= await context.Nacionalidad.FirstOrDefaultAsync(m => m.Id == Id);

        if (Nacionalidad is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateNacionalidad()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Nacionalidad!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!NacionalidadExists(Nacionalidad!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/nacionalidads");
    }

    private bool NacionalidadExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Nacionalidad.Any(e => e.Id == id);
    }
}
